---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact Us" title="How can we help?" />

  <section
    class="mx-auto mb-4 flex w-full max-w-2xl flex-col rounded-lg border border-gray-200 bg-white p-4 shadow backdrop-blur dark:border-gray-700 dark:bg-slate-900 sm:p-6 lg:p-8"
  >
    <!-- dark mode form -->
    <iframe
      class="m-0 hidden w-full border-0 dark:block"
      data-tally-src="https://tally.so/embed/w4xoOr?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1"
      loading="lazy"
      title="Contact Us"></iframe>

    <!-- light mode form -->
    <iframe
      class="m-0 w-full border-0 dark:hidden"
      data-tally-src="https://tally.so/embed/m6NlqJ?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1"
      loading="lazy"
      title="Contact Us"></iframe>

    <script>
      document.addEventListener('astro:page-load', () => Tally.loadEmbeds());
    </script>
  </section>
</Layout>
