---
import type { ImageMetadata } from 'astro';
import { Icon } from 'astro-icon/components';
import Image from '~/components/common/Image.astro';
import PostTags from '~/components/blog/Tags.astro';

import { APP_BLOG } from '~/utils/config';
import type { Post } from '~/types';
import type { Class } from '@types/Class';

// import { getPermalink } from '~/utils/permalinks';
// import { findImage } from '~/utils/images';
import { getFormattedDate } from '~/utils/utils';

export interface Props {
  post: Class;
}

const { post } = Astro.props;
// const image = (await findImage(post.image)) as ImageMetadata | undefined;

/* const link = APP_BLOG?.post?.isEnabled ? getPermalink(post.permalink, 'post') : '';*/
---

<article class={`max-w-md mx-auto md:max-w-none`}>
  <div class="flex flex-wrap gap-6 mb-4">
    {
      post.image && (
        <div class="basis-4/12 grow">
          <Image
            src={post.image}
            class="object-cover w-full h-full rounded shadow-lg bg-gray-400 dark:bg-slate-700"
            widths={[400, 600]}
            width={600}
            sizes="(max-width: 900px) 400px, 600px"
            alt={post.alt}
            aspectRatio="16:9"
            loading="lazy"
            decoding="async"
          />
        </div>
      )
    }
    <div class="mt-2 basis-7/12 grow">
      <header>
        <h3 class="text-xl sm:text-2xl font-bold leading-tight mb-2 font-heading dark:text-slate-300">
          {post.title}
        </h3>
        <span>
          <!-- {post.instructors.length > 1 ? 'Instructors:' : 'Instructor:'} -->
          {
            post.instructors.map((instructor) => (
              <span class="text-sm rounded bg-gray-400 dark:bg-slate-700 py-1 px-2">{instructor.name}</span>
            ))
          }
        </span>
        <div class="mt-2 mb-1">
          <span class="text-sm">
            <Icon name="tabler:clock" class="w-3.5 h-3.5 inline-block -mt-0.5 dark:text-gray-400" />
            <time datetime=`${post.classTimes.start}/${post.classTimes.end}` class="inline-block"
              >{post.classTimes.start} - {post.classTimes.end}</time
            >
            <!-- {
              post.category && (
                <>
                  {' '}
                  Â·{' '}
                  <a class="capitalize hover:underline" href={getPermalink(post.category, 'category')}>
                    {post.category.replaceAll('-', ' ')}
                  </a>
                </>
              )
            } -->
          </span>
        </div>
        <div class="mt-2 mb-1">
          <span class="text-sm">
            <Icon name="tabler:school" class="w-3.5 h-3.5 inline-block -mt-0.5 dark:text-gray-400" />
            {post.ages.min} - {post.ages.max}
          </span>
        </div>
        <div class="mt-2 mb-1">
          <span class="text-sm">
            <Icon name="tabler:currency-dollar" class="w-3.5 h-3.5 inline-block -mt-0.5 dark:text-gray-400" />
            {post.price}
          </span>
        </div>
      </header>

      <!-- <footer class="mt-5">
        <PostTags tags={post.tags} />
      </footer> -->
    </div>
  </div>
  {post.description && <p class="flex-grow text-muted dark:text-slate-400 text-lg">{post.description}</p>}
</article>
