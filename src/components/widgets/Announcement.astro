---
import { Icon } from 'astro-icon/components';
import { Announcement as AnnouncementType } from '../../queries/Announcement';

export interface Props {
  announcement: AnnouncementType;
}
const {
  announcement: { badge, headline, link },
} = Astro.props;
---

<div
  id="banner"
  tabindex="-1"
  class="z-50 flex w-full justify-center bg-gray-50 px-4 py-2 text-muted dark:bg-transparent dark:text-slate-400"
>
  <div class="items-center md:flex">
    <p class="text-sm font-medium text-gray-900 dark:text-white md:my-0">
      <span
        class="mr-2 hidden rounded bg-blue-100 px-2.5 py-0.5 text-xs font-semibold text-blue-800 dark:bg-blue-200 dark:text-blue-800 md:inline"
        >{badge.toUpperCase()}</span
      >{headline}<a
        class="ml-2 inline-flex items-center text-sm font-medium text-accent hover:underline dark:text-secondary md:ml-2"
        href={link.href}
        target={link.new_window ? '_blank' : undefined}>{link.text}<Icon name="tabler:arrow-right" /></a
      >
    </p>
  </div>
</div>
