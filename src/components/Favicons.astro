---
import { getImage } from 'astro:assets';
import png from '~/assets/favicons/favicon.png';
import svg from '~/assets/favicons/favicon.svg';

import favIconSvg from '~/assets/favicons/favicon.svg';

const appleTouchIcon = await getImage({
  src: png,
  width: 180,
  height: 180,
  format: 'png',
});

const faviconSvg = await getImage({ src: svg, format: 'svg' });
---

<link rel="icon" href="/favicon.ico" sizes="32x32" />
<link rel="shortcut icon" href="/favicon256.ico" sizes="256x256" />
<link rel="icon" href={faviconSvg.src} type="image/svg+xml" sizes="any" />
<link rel="manifest" href="/manifest.json" />
<link rel="mask-icon" href={favIconSvg.src} color="#000000" />
<link rel="apple-touch-icon" sizes="180x180" href={appleTouchIcon.src} />
